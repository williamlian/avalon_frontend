<?xml version='1.0' encoding='utf-8'?>
<widget id="com.williamlian.phonegap.avalon" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Avalon</name>
    <description>Helper to play Avalon the board game.</description>
    <author email="avalon@williamlian.com" href="http://avalon.williamlian.com">William Lian</author>
    <content src="www/index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <icon src="www/apple-touch-icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <allow-navigation href="*" />
</widget>
